#:import TimeLayout time_layout
#:import CurrentLayout current_layout

<TimeLayout>:
    orientation: 'horizontal'
    size: 600,32
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 64/255, 64/255, 64/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size: 10,10
        size_hint: None, None
        id: datetime
        text: root.day
        font_size: 12
    Label:
        id: datetime
        text: root.date
        font_size: 24
    Label:
        id: datetime
        text: root.time
        font_size: 24


<CurrentLayout>:
    id: current
    orientation: 'horizontal'
    size: 200,124
    size_hint: None, None
    spacing: 10
    padding: [18,7,18,7]
    canvas.before:
        Color:
            rgba: 255/255, 255/255, 255/255, 1
        Line:
            rounded_rectangle: self.x + 1, self.y + 1, self.width, self.height, 10
            width: 2

    Label:
        id: temp
        text: '15.7' + ' Â°C'
        font_size: 48


<WeatherStation>:
    BoxLayout:
        orientation: 'vertical'
        size: 800,480
        size_hint: None, None
        spacing: 10
        TimeLayout:
            id:time_widget
        CurrentLayout:
            id: current_widget

